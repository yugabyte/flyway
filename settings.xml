<settings>
 <profiles>
    <profile>
      <id>sonatype-release</id>
      <properties>
        <snapshotRepository.id>sonatype-nexus-snapshots</snapshotRepository.id>
        <snapshotRepository.name>Sonatype Nexus Snapshots</snapshotRepository.name>
        <snapshotRepository.url>https://oss.sonatype.org/content/repositories/snapshots</snapshotRepository.url>

        <releaseRepository.id>sonatype-nexus-staging</releaseRepository.id>
        <releaseRepository.name>Nexus Release Repository</releaseRepository.name>
        <releaseRepository.url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</releaseRepository.url>
      </properties>
    </profile>
    <profile>
      <id>repo-proxy-release</id>
      <properties>
        <snapshotRepository.id></snapshotRepository.id> <!-- Intentionally blank -->
        <snapshotRepository.name></snapshotRepository.name> <!-- Intentionally blank -->
        <snapshotRepository.url></snapshotRepository.url> <!-- Intentionally blank -->

        <releaseRepository.id>flyway-repo-release</releaseRepository.id>
        <releaseRepository.name></releaseRepository.name> <!-- Intentionally blank -->
        <releaseRepository.url>https://repo.flywaydb.org/repo</releaseRepository.url>
      </properties>
    </profile>
  </profiles>
  <servers>
    <server>
      <id>flyway-repo</id>
      <username>flyway-readonly</username>
      <password>${env.FLYWAY_READONLY_PASSWORD}</password>
    </server>
    <server>
      <id>flyway-repo-release</id>
      <username>flyway-release</username>
      <password>${env.FLYWAY_RELEASE_PASSWORD}</password>
    </server>
    <server>
      <id>flyway-gpg</id>
      <passphrase>${env.FLYWAY_GPG_PASSPHRASE}</passphrase>
    </server>
    <server>
      <id>sonatype-nexus-snapshots</id>
      <username>flyway</username>
      <password>${env.FLYWAY_SONATYPE_NEXUS_PASSWORD}</password>
    </server>
    <server>
      <id>sonatype-nexus-staging</id>
      <username>flyway</username>
      <password>${env.FLYWAY_SONATYPE_NEXUS_PASSWORD}</password>
    </server>
    <server>
      <id>maven.oracle.com</id>
      <username>mikiel.agutu@red-gate.com</username>
